<% if notice %>
	<aside id="notice"><%= notice %></aside>
<% end %>

<h1>Your Pragmatic Catalog</h1>
<ul class="catalog">
	<% @products.each do |product| %>
		<li>
			<%= image_tag(product.image_url) %>
			<h4><%= product.title %></h4>
			<p><%= sanitize(product.description) %></p>
			<div class="price">
				<%= product.price %>
			</div>
		</li>
	<% end %>
</ul>